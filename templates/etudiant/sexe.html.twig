{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <form target="{{ path('app_etudiant_sexe') }}" method="post">
        <select name="sexe" id="sexe">
            <option value="0">NULL</option>
            <option value="1">Homme</option>
            <option value="2">Femme</option>
        </select>
        <button type="submit" id="search">Search</button>
    </form>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Prenom</th>
            <th>Sexe</th>
            <th>Anniversaire</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for etudiant in etudiants %}
            <tr>
                <td>{{ etudiant.id }}</td>
                <td>{{ etudiant.nom }}</td>
                <td>{{ etudiant.prenom }}</td>
                <td>{{ sexeTab[etudiant.sexe] }}</td>
                <td>{{ etudiant.anniversaire ? etudiant.anniversaire|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_etudiant_show', {'id': etudiant.id}) }}">show</a>
                    <a href="{{ path('app_etudiant_edit', {'id': etudiant.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
